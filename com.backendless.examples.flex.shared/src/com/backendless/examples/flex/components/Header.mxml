<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Script>
        <![CDATA[

        [Bindable]
        public var title:String;

        [Bindable]
        public var outputShown:Boolean;

        ]]>
    </fx:Script>

    <s:Rect width="100%" height="100%">
        <s:fill>
            <s:SolidColor color="#333333" />
        </s:fill>
    </s:Rect>

    <s:Label left="10" verticalCenter="0" styleName="h2" text="{this.title}" />

    <s:ToggleButton styleName="iconToggleButton" right="10" verticalCenter="0" selected="{this.outputShown}" color="#CCCCCC" label="&#xf0ca;" click="outputShown = !outputShown" />

</s:Group>
