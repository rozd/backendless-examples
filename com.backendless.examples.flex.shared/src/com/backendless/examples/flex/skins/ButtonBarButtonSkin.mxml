<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">

	<fx:Metadata>
		[HostComponent("spark.components.ButtonBarButton")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import mx.utils.ColorUtil;
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="up" />
		<s:State name="over" stateGroups="overStates" />
		<s:State name="down" stateGroups="downStates" />
		<s:State name="disabled" stateGroups="disabledStates" />
		<s:State name="upAndSelected" stateGroups="selectedStates, selectedUpStates" />
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates" />
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates" />
		<s:State name="disabledAndSelected" stateGroups="selectedUpStates, disabledStates, selectedStates" />
	</s:states>
	
	<s:Rect left="0" top="0" right="0" bottom="0" radiusX="4" radiusY="4">
		<!--<s:fill>
			<s:SolidColor color.selectedStates="{getStyle('chromeColor')}" color="{ColorUtil.adjustBrightness2(getStyle('chromeColor') as uint, -0xF)}" />
		</s:fill>-->
		<s:stroke>
			<s:SolidColorStroke color="#D4D4D4"
								color.selectedStates="#3079ED"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#F4F4F4" ratio="0.0"
								 color.selectedStates="#4C91FF"/>
				<s:GradientEntry includeIn="selectedStates" color="#4C91FF" ratio=".6"/>
				<s:GradientEntry color="#ECECEC" ratio="1.0"
								 color.selectedStates="#2F71DB"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay"
			 textAlign="center"
			 verticalAlign="middle" fontSize="14"
			 maxDisplayedLines="1"
			 color="#333333"
			 color.selectedStates="#FFFFFF"
			 horizontalCenter="0" verticalCenter="1"
			 left="0" right="0" top="2" bottom="2" />
	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
</s:Skin>
