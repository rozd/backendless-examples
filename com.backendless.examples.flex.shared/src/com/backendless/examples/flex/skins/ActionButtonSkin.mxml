<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="disabled"/>
		<s:State name="down"/>
		<s:State name="over"/>
		<s:State name="up"/>
	</s:states>
	
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="4" radiusY="4">
		<s:stroke>
			<s:SolidColorStroke color="#D4D4D4"
								color.down="#3079ED"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#F4F4F4" ratio="0.0"
								 color.down="#4C91FF"/>
				<s:GradientEntry includeIn="down" color="#4C91FF" ratio=".6"/>
				<s:GradientEntry color="#ECECEC" ratio="1.0"
								 color.down="#2F71DB"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Label id="labelDisplay" left="50" right="10" top="10" bottom="10" color="#000000"
			 maxDisplayedLines="1" textAlign="left" verticalAlign="middle" verticalCenter="2"
			 color.down="#FFFFFF"/>
	
</s:Skin>
