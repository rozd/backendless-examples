<?xml version="1.0"?>
<cairngorm:ValidatorGroup xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:cairngorm="http://ns.adobe.com/cairngorm"
                          xmlns:parsley="http://www.spicefactory.org/parsley">

    <fx:Script>
        <![CDATA[
        import com.backendless.examples.flex.login.presentation.ILoginPM;

        [Bindable]
        public var model:ILoginPM;

        ]]>
    </fx:Script>

    <fx:Declarations>

    </fx:Declarations>

    <cairngorm:validators>
        <mx:Validator id="nameValidator" source="{model.userRegister}" property="name" triggerEvent="propertyChange" />
        <mx:Validator id="passwordValidator" source="{model.userRegister}" property="password" triggerEvent="propertyChange" />
        <mx:Validator id="verifyPasswordValidator" source="{model.userRegister}" property="email" triggerEvent="propertyChange" />
        <mx:EmailValidator id="emailValidator" source="{model.userRegister}" property="email" triggerEvent="propertyChange" />
        <cairngorm:FieldComparisonValidator id="passwordsMatchValidator" source="{model.userRegister}" property="password" triggerEvent="propertyChange" destination="{model.userRegister}" destinationProperty="passwordVerify" destinationTriggerEvent="propertyChange" requiredFieldError="These passwords don't match." />
    </cairngorm:validators>

</cairngorm:ValidatorGroup>
