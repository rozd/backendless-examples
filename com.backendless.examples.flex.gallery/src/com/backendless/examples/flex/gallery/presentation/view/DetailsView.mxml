<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:parsley="http://www.spicefactory.org/parsley">

    <fx:Script>
        <![CDATA[
        import com.backendless.examples.flex.gallery.presentation.IDetailsPM;

        [Inject]
        [Bindable]
        public var model:IDetailsPM;
        ]]>
    </fx:Script>

    <fx:Declarations>
        <parsley:Configure />
    </fx:Declarations>

    <s:Rect left="0" top="0" right="0" bottom="0">
        <s:fill>
            <s:RadialGradient scaleX="120.0" scaleY="120.0">
                <s:GradientEntry color="#000000" ratio="0.00" alpha="0.1"/>
                <s:GradientEntry color="#000000" ratio="0.35" alpha="0.2"/>
                <s:GradientEntry color="#000000" ratio="1.00" alpha="0.4"/>
            </s:RadialGradient>
        </s:fill>
    </s:Rect>

    <s:Group horizontalCenter="0" verticalCenter="0">
        <s:Rect left="0" top="0" right="0" bottom="0">
            <s:fill>
                <s:SolidColor color="#FFFFFF" />
            </s:fill>
        </s:Rect>
        <s:VGroup paddingLeft="10" paddingTop="10" paddingRight="10" paddingBottom="10">
            <s:Image maxHeight="600" scaleMode="zoom" source="{model.item.getFileSource()}" click="model.back();" />
            <!--
            <s:TextArea width="100%" height="60" text="{model.item.description}" />
            <s:HGroup width="100%">
                <s:Label styleName="iconLabel" text="&#xf0c1;" />
                <s:TextInput width="100%" text="{model.item.reference}" />
            </s:HGroup>
            -->
            <!--<s:HGroup width="100%" horizontalAlign="right">-->
                <!--<s:Button label="Back" click="model.back()" />-->
            <!--</s:HGroup>-->
        </s:VGroup>
    </s:Group>

</s:Group>
