<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
         xmlns:parsley="http://www.spicefactory.org/parsley">

    <fx:Script>
        <![CDATA[
        import com.backendless.examples.flex.galery.presentation.IDetailsPM;

        [Inject]
        [Bindable]
        public var model:IDetailsPM;

        ]]>
    </fx:Script>

    <fx:Declarations>
        <parsley:Configure />
    </fx:Declarations>


    <s:VGroup left="0" top="0" right="0" bottom="0" paddingLeft="10" paddingTop="10" paddingRight="10" paddingBottom="10">
        <s:BitmapImage width="100%" source="{model.item.fileREF || model.item.fileURL}" />
        <s:TextArea width="100%" height="60" text="{model.item.description}" />
        <s:HGroup width="100%">
            <s:Label styleName="iconLabel" text="&#xf0c1;" />
            <s:TextInput width="100%" text="{model.item.reference}" />
        </s:HGroup>
    </s:VGroup>

</s:Group>
