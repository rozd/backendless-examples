<?xml version="1.0"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
               xmlns:parsley="http://www.spicefactory.org/parsley"
               xmlns:components="com.backendless.examples.flex.components.*"
               currentState="{this.model.destination}"
               applicationComplete="applicationCompleteHandler(event)">

    <fx:Script>
        <![CDATA[
        import com.backendless.flex.examples.chat.Context;
        import com.backendless.flex.examples.chat.presentation.IMainPM;

        import mx.events.FlexEvent;

        [Inject]
        [Bindable]
        public var model:IMainPM;

        private function applicationCompleteHandler(event:FlexEvent):void
        {
            model.startup();
        }
        ]]>
    </fx:Script>

    <fx:Style source="css/font.css" />
    <fx:Style source="css/text.css" />
    <fx:Style source="css/view.css" />

    <fx:Declarations>
        <parsley:Configure />
        <parsley:ContextBuilder config="{Context}" />
    </fx:Declarations>

    <s:states>
        <s:State name="init" />
        <s:State name="name" />
        <s:State name="chat" />
    </s:states>

    <components:Header id="header" width="100%" height="40" title="Backendless Chat Example" />

    <s:Group left="0" top="60" right="0" bottom="0">
    </s:Group>

    <s:RichText styleName="h5" bottom="20" horizontalCenter="0">
        <s:textFlow>
            <s:TextFlow>
                This is a sample application that demonstrates working with <s:span color="#5786FD">Backendless</s:span> MessagingService API
            </s:TextFlow>
        </s:textFlow>
    </s:RichText>

    <components:Output left="0" right="0" bottom="0" height="100" visible="{this.header.outputShown}" includeInLayout="{this.header.outputShown}" />

    <components:Settings left="0" top="0" right="0" bottom="0" visible="{this.header.settingsShown}" includeInLayout="{this.header.settingsShown}" close="this.header.settingsShown = false;" />

</s:Application>
