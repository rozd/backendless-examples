<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" width="100%" height="40">

    <fx:Script>
        <![CDATA[

        import com.backendless.examples.flex.Assets;

        ]]>
    </fx:Script>

    <s:Rect left="0" top="0" right="0" bottom="0">
        <s:fill>
            <s:SolidColor color="#FFFFFF" />
        </s:fill>
    </s:Rect>

    <s:HGroup left="0" top="0" right="0" bottom="0" verticalAlign="middle" gap="0">
        <s:Group width="40" height="40">
            <s:Label styleName="iconLabel" text="&#xF00C;" horizontalCenter="0" verticalCenter="0" />
        </s:Group>

        <s:Label text="{data.label}" lineThrough="{data.done}" width="100%" />

        <s:Group width="40" height="40">
            <s:Label styleName="iconLabel" text="&#xF00D;" horizontalCenter="0" verticalCenter="0" />
        </s:Group>
    </s:HGroup>


</s:ItemRenderer>
